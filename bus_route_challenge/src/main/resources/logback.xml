<configuration debug="true" scan="true">
	<contextName>bus-route</contextName>
	<jmxConfigurator />
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<charset>UTF-8</charset>
			<param name="Pattern" value="%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-6level [%file:%line] - %msg - %logger%n" />
		</encoder>
	</appender>
	<root level="INFO">
		<appender-ref ref="console" />
	</root>
</configuration>
